#include <stdint.h>


int main(void)
{
	uint8_t *ptr = (uint8_t*)0x20000200;
	*ptr = 0x06; // storing value 0xff

	//normal method
	*ptr &= ~(1 << 7); //clearing the 7th bit

	// bit band method
	// calculate the address from the manual
	uint8_t *alias_addr =(uint8_t*) (0x22000000 + (32 *(0x20000200 - 0x20000000)) + 7 * 4);

